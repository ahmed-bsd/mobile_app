<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ReservationDetailActivity">

    <!-- Exemple de vues pour afficher les détails du formulaire rempli -->



    <TextView
        android:id="@+id/detailsEvenementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="141dp"
        android:text="Détails de l'événement"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom: "
        android:layout_below="@+id/detailsEvenementTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/modifierButton"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/supprimerButton"
        android:text="Modifier"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:backgroundTint="@color/button_color" />

    <Button
        android:id="@+id/supprimerButton"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="-5dp"
        android:text="Supprimer"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:backgroundTint="@color/button_color" />
</RelativeLayout>