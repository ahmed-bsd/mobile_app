<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/app_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/dancing_bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="VitaSport"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <LinearLayout
            android:id="@+id/buttomevenement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:background="@drawable/round_border"

            android:orientation="vertical">

            <Button
                android:onClick="register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/dm_medium"
                android:padding="20dp"
                android:text="nos evenements"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/button_color">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/dm_medium"
                android:padding="20dp"
                android:text="nos produits"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/button_color">

            </Button>
            <Button
                android:src="@drawable/baseline_arrow_back_24"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/dm_medium"
                android:padding="20dp"
                android:text="nos terrains de sports"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/button_color">

            </Button>
            <Button
                android:src="@drawable/baseline_arrow_back_24"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/dm_medium"
                android:padding="20dp"
                android:text="votre profil"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/button_color">

            </Button>



        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_home_24"
            app:tint="@color/white"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Reservation"
            android:textColor="@color/white"
            android:textSize="22sp"/>
    </LinearLayout>

</RelativeLayout>








